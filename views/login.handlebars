<div class="container-fluid z-index-2">
  <div class="row">
      <div class="col-sm-10 offset-sm-1 col-md-4 offset-md-4 login-container">
        <form action="/login" method="post">
          <div class="form-group">
            <label for="email" class="email-label">Email</label>            
            <input name='email' type='email' id="email"  class="validate">
          </div>
          <div class="form-group">
                <label for="password" class="password-label">Password</label>            
              <input name='password' id="password" type="password" class="validate">
            </div>
          <div class="col-12 text-left checkbox">
            <input type="checkbox" id="remember_me" />
            <label for="remember_me">Remember me</label>
          </div>
          <input value='Log In' class="btn-large btn-signup tomato" type="submit">
        </form>
        <br>
        <div class="row justify-content-between">
        <div class="col-sm-7 no-account">
                Don't have an account?
              </div>
              <div class="col-sm-12 col-md-5 text-center  align-self-center">
                <a href='/create-account'class="btn-large left-align signup-button">Sign Up</a>
              </div>
          </div>
      </div>
  </div>
  
</div>
<div class="stars"></div>
<div class="twinkling"></div>